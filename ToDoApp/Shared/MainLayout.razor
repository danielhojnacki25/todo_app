@using ToDoApp.Shared.Enums
@using ToDoApp.Shared.Extensions.NavigateManagerExtensions
@inherits LayoutComponentBase
@inject NavigationManager NavigationManager
 
<PageTitle>List ToDo</PageTitle>
 

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
       Lista ToDo
       <MudSpacer />
       <MudIconButton Icon="@Icons.Material.Outlined.PeopleAlt"/>
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
    <MudNavMenu>
    <MudNavLink OnClick="() => NavigationManager.NavigateTo(NavigationManagerPaths.Tasks)">Tasks</MudNavLink>
    <MudNavLink Href="/servers" Match="NavLinkMatch.Prefix">Task List</MudNavLink>
    <MudNavGroup Title="Settings"   Expanded="true">
        <MudNavLink Href="/users"  Match="NavLinkMatch.Prefix">Task Page</MudNavLink>
        <MudNavLink Href="/security"  Match="NavLinkMatch.Prefix">Security</MudNavLink>
    </MudNavGroup>
    <MudNavLink OnClick="() => NavigationManager.NavigateTo(NavigationManagerPaths.TasksTwo)" Match="NavLinkMatch.Prefix">About</MudNavLink>
</MudNavMenu>
   <MudNavMenu>
    <MudNavLink OnClick="() => NavigationManager.NavigateTo(NavigationManagerPaths.Tasks)">Mama</MudNavLink>
    <MudNavLink Href="/servers" Match="NavLinkMatch.Prefix">Tata</MudNavLink>
    <MudNavGroup Title="Dzieci"   Expanded="true">
        <MudNavLink Href="/users"  Match="NavLinkMatch.Prefix">Dziecko 1</MudNavLink>
        <MudNavLink Href="/security"  Match="NavLinkMatch.Prefix">Dziecko 2</MudNavLink>
    </MudNavGroup>
    <MudNavLink OnClick="() => NavigationManager.NavigateTo(NavigationManagerPaths.TasksTwo)" Match="NavLinkMatch.Prefix">Ciapek</MudNavLink>
</MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
